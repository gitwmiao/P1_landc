<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <ImageView
        android:id="@+id/im_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/list_icon"
        android:padding="10dp"/>

    <LinearLayout
        android:id="@+id/lv_look"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">
        <fragment
            android:id="@+id/detail_fragment02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.bwf.p1_landz.iu.onlinevilla.fragment.FragmentTwo"
            />

    </LinearLayout>


    <Gallery
        android:id="@+id/gallerg_str"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#55000000"
        android:spacing="16dp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/im_look"
        android:visibility="gone"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:id="@+id/ll_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            />
    </ScrollView>


</RelativeLayout>